<Window x:Class="Sokoban___OOP_Assessment.VictoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sokoban___OOP_Assessment"
        mc:Ignorable="d"
        Title="VictoryWindow" Height="450" Width="800">
    <Grid Background="#FFB5B4B4" RenderTransformOrigin="0.501,0.39">
        <TextBlock HorizontalAlignment="Center" Margin="0,57,0,0" TextWrapping="Wrap" Text="Well Done!, You Have Conqured Sokoban" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="btn_ReturnToHome" Content="Return to Home Screen" HorizontalAlignment="Center" Margin="0,168,0,0" VerticalAlignment="Top" FontSize="20" Width="228" Click="btn_ReturnToHome_Click"/>
        <Button x:Name="btn_RestartGame" Content="Restart Game" HorizontalAlignment="Center" Margin="0,230,0,0" VerticalAlignment="Top" FontSize="20" Width="229" Click="btn_RestartGame_Click"/>

    </Grid>
</Window>
